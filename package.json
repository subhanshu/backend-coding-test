{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "lint": "eslint ./src/*;eslint ./*.js;",
    "test": "npm run lint & nyc mocha tests --timeout 10000",
    "start": "nodemon index.js",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "travis": "npm-travis"
  },
  "pre-push": [
    "test"
  ],
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "sqlite3": "^4.0.6",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2"
  },
  "nyc": {
    "branches": 80,
    "lines": 80,
    "statements": 80,
    "check-coverage": true
  }
}
